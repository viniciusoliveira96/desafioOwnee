<p id="notice"><%= notice %></p>

<h1>Filmes</h1>

<%= form_tag filmes_path, :method => 'get' do %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Buscar", :name => nil %>
      </p>
  <% end %>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Gênero</th>
      <th>Preço</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @filmes.each do |filme| %>
      <tr>
        <td><%= filme.nome %></td>
        <td><%= filme.genero %></td>
        <td><%= filme.preco %></td>
        <td><%= link_to 'Ver', filme %></td>
        <td><%= link_to 'Editar', edit_filme_path(filme) %></td>
        <td><%= link_to 'Excluir', filme, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar novo filme', new_filme_path %>
