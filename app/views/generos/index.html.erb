<p id="notice"><%= notice %></p>

<h1>Generos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Gênero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @generos.each do |genero| %>
      <tr>
        <td><%= genero.genero %></td>
        <td><%= link_to 'Ver', genero %></td>
        <td><%= link_to 'Editar', edit_genero_path(genero) %></td>
        <td><%= link_to 'Excluir', genero, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Genero', new_genero_path %>
